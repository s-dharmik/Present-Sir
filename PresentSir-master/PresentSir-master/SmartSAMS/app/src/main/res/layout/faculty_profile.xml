<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".faculty_profile"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@drawable/button"
        android:padding="20dp"
        android:layout_marginTop="-30dp">

        <ImageView
            android:id="@+id/facultyProfileImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:src="@drawable/professor" />

        <TextView
            android:id="@+id/FacultyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/facultyProfileImage"
            android:fontFamily="@font/baloo"
            android:includeFontPadding="false"
            android:hint="Name"
            android:textSize="25dp"
            android:textAllCaps="true"/>

        <TextView
            android:id="@+id/FacultyEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/FacultyName"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/facultyProfileImage"
            android:includeFontPadding="false"
            android:hint="email"
            android:textSize="15dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <ImageView
            android:id="@+id/image1"
            android:src="@drawable/ic_profile"
            android:layout_weight="1"
            android:layout_width="70dp"
            android:layout_height="50dp"/>
        <TextView
            android:id="@+id/FacultyName_1"
            android:hint="Name"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image1"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <ImageView
            android:id="@+id/image3"
            android:src="@drawable/ic_deparment"
            android:layout_weight="1"
            android:layout_width="70dp"
            android:layout_height="50dp"/>
        <TextView
            android:id="@+id/FacultyDepartment"
            android:textSize="20dp"
            android:hint="Department"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image3"
            android:textColor="@color/black"/>
    </LinearLayout>

</LinearLayout>