<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/user_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_marginTop="9dp"/>

        <TextView
            android:id="@+id/attendance_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo"
            android:text="Arvind Singh Singh"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_toRightOf="@id/user_number"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="6dp"/>
        <TextView
            android:id="@+id/attendance_enrollment"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="170860107001"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:layout_below="@id/attendance_name"
            android:layout_marginLeft="50dp"/>

        <TextView
            android:id="@+id/attendance_status"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="A"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:layout_toRightOf="@id/attendance_name"
            android:layout_marginLeft="50dp"/>

        <TextView
            android:id="@+id/AT_DATE"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:layout_below="@id/attendance_status"
            android:layout_toRightOf="@id/attendance_name"
            android:layout_marginLeft="30dp"/>


    </RelativeLayout>


</androidx.cardview.widget.CardView>