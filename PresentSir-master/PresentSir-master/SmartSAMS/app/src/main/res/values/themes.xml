<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SmartSAMSLogin" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
       <item name="colorPrimary">@color/colorPrimary</item>
       <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
       <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">#00000000</item>
    </style>

    <style name="Theme.SmartSAMSLogin.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="Theme.SmartSAMSLogin.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Theme.SmartSAMSRegister" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary2</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark2</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="SmartSAMSRegister.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="SmartSAMSRegister.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>