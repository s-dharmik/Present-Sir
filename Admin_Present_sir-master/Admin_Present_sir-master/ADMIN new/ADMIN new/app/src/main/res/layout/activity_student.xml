<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="80dp"
    android:background="@drawable/studentback"
    tools:context=".Student">


//name
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:background="@drawable/ic_name"
            android:layout_marginTop="11dp"
            android:backgroundTint="@color/black"
            />

        <EditText
            android:id="@+id/name"
            android:hint="Name"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:textColorHint="#696969"
            android:backgroundTint="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>




//email
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:background="@drawable/ic_email"
            android:layout_marginTop="11dp"
            android:backgroundTint="@color/black"
            />
        <EditText
            android:id="@+id/email"
            android:hint="Email"
            android:backgroundTint="@color/black"
            android:textColorHint="#696969"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>





    //enrollment

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:background="@drawable/ic_enrollment"
            android:layout_marginTop="11dp"
            android:backgroundTint="@color/black"
            />
        <EditText
            android:id="@+id/enrollment"
            android:hint="Enrollment number "
            android:inputType="number"
            android:backgroundTint="@color/black"
            android:textColorHint="#696969"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</LinearLayout>






    //join year

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:background="@drawable/ic_joinyear"
            android:layout_marginTop="11dp"
            android:backgroundTint="@color/black"
            />
        <EditText
            android:id="@+id/joinyear"
            android:hint="Join Year "
            android:inputType="number"
            android:backgroundTint="@color/black"
            android:textColorHint="#696969"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>




    //spinner department

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:background="@drawable/ic_department"
                android:backgroundTint="@color/black"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Department"
                android:textSize="17dp"
                android:layout_marginLeft="5dp"
                android:textColor="#696969">
            </TextView>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:background="@drawable/customize_spinner"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
            <Spinner
                android:id="@+id/department"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:gravity="center"
                android:background="@drawable/customize_spinner"
                android:entries="@array/department_list"
                />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:src="@drawable/drop_down" />

            </RelativeLayout>
        </LinearLayout>




        //spinner2 role


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            >


             <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:background="@drawable/ic_semester"
                android:layout_marginTop="0dp"
                android:backgroundTint="@color/black"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="semester"
                android:textSize="17dp"
                android:layout_marginLeft="5dp"
                android:textColor="#696969">
            </TextView>
             </LinearLayout>

           <RelativeLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/customize_spinner"
               android:orientation="horizontal"
               android:layout_marginTop="5dp">
            <Spinner
                android:id="@+id/semester"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/customize_spinner"
                android:entries="@array/Semester_list"
                />

               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="35dp"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:layout_gravity="center"
                   android:src="@drawable/drop_down" />
           </RelativeLayout>
        </LinearLayout>

    </LinearLayout>




    //macaddress


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:background="@drawable/ic_macaddress"
            android:layout_marginTop="11dp"
            android:backgroundTint="@color/black"
            />
        <EditText
            android:id="@+id/st_mac_address"
            android:hint="Mac address"
            android:inputType="text"
            android:textColorHint="#696969"
            android:backgroundTint="@color/black"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>




    //password

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:background="@drawable/ic_password"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/black"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:textColorHint="#696969"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="#696969">
            <EditText
                android:id="@+id/password"
                android:hint="Password"
                android:textColorHint="#696969"
                android:backgroundTint="@color/black"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>



    //confirm password

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:background="@drawable/ic_password"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/black"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:textColorHint="#696969"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="#696969">

            <EditText
                android:id="@+id/Confirmpassword"
                android:hint="Confirm Password"
                android:backgroundTint="@color/black"
                android:textColorHint="#696969"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>



    <ProgressBar
        android:id="@+id/loading"
        android:layout_marginTop="25dp"
        android:visibility="gone"
        android:background="#fcffe4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <Button
        android:id="@+id/btn_regist"
        android:text="REGISTER"
        android:textColor="@color/white"
        android:backgroundTint="@color/black"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="25dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        />

</LinearLayout>